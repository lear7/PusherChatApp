<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.gkd.projectx.home.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_events"
        android:name="com.gkd.projectx.home.events.EventsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_events" />

    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.gkd.projectx.home.chats.ChatFragment"
        android:label="@string/title_chat"
        tools:layout="@layout/fragment_chatview" />

    <fragment
        android:id="@+id/navigation_mine"
        android:name="com.gkd.projectx.home.mine.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_mine" />
</navigation>